{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <h1>Blog index</h1>

    <table class="table">
        <thead>

        </thead>
        <tbody>
        {% for blog in blogs %}

            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">{{ blog.id }}</p>
                        <p class="card-text">{{ blog.moment ? blog.moment|date('Y-m-d H:i:s') : '' }}</p>
                        <p class="card-text">{{ blog.text }}</p>

                        <div class="d-flex justify-content-between align-items-center">

                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary"><a href="{{ path('blog_show', {'id': blog.id}) }}">show</a></button>
                                <button type="button" class="btn btn-sm btn-outline-secondary"><a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a></button>
                            </div>
                            <small class="text-muted">9 mins</small>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_new') }}">Create new</a>
{% endblock %}
